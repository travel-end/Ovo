<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="hhh.qaq.ovo.viewmodel.SearchHotViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32">

                <TextView
                    android:id="@+id/item_history_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_16"
                    android:text="@string/recommend_search"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/item_history_end_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:src="@drawable/delete"
                    android:visibility="invisible" />
            </FrameLayout>

            <TextView
                android:id="@+id/item_sh_tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_4"
                android:text="@string/no_search_history"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <hhh.qaq.ovo.widget.flowlayout.TagFlowLayout
                android:id="@+id/item_sh_flow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:visibility="gone" />
        </LinearLayout>
        <include
            layout="@layout/view_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@{vm.mTitleVm}" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gradient_blue"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_12">

        </LinearLayout>
    </LinearLayout>
</layout>